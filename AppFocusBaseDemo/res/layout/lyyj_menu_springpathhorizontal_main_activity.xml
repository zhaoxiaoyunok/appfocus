<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativelayout_menu"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clipChildren="false"
        android:clipToPadding="false" >
        
        <RelativeLayout 
            android:id="@+id/layout_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lyyj_menu_springpathhorizontal_bg_main_1">
            
        </RelativeLayout>
            
        <com.lyyj.activity.demo.menu.springpathhorizontal.control.ShrinkRelativeLayout
            android:id="@+id/menus_wrapper"
            android:layout_width="fill_parent"
            android:layout_height="120dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:focusable="true"
            android:clipChildren="false"
            android:clipToPadding="false" >

            <com.lyyj.activity.demo.menu.springpathhorizontal.control.ImageButtonExtend
                android:id="@+id/menu_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="100.0px"
                android:layout_marginLeft="10dp"
                android:background="@drawable/lyyj_menu_springpathhorizontal_menu_camera"
                android:visibility="gone" />

            <com.lyyj.activity.demo.menu.springpathhorizontal.control.ImageButtonExtend
                android:id="@+id/menu_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="100.0px"
                android:layout_marginLeft="60dp"
                android:background="@drawable/lyyj_menu_springpathhorizontal_menu_with"
                android:visibility="gone"/>

            <com.lyyj.activity.demo.menu.springpathhorizontal.control.ImageButtonExtend
                android:id="@+id/menu_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="100.0px"
                android:layout_marginLeft="110dp"
                android:visibility="gone"
                android:background="@drawable/lyyj_menu_springpathhorizontal_menu_place" />

            <com.lyyj.activity.demo.menu.springpathhorizontal.control.ImageButtonExtend
                android:id="@+id/menu_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="100.0px"
                android:layout_marginLeft="160dp"
                android:visibility="gone"
                android:background="@drawable/lyyj_menu_springpathhorizontal_menu_music" />

            <com.lyyj.activity.demo.menu.springpathhorizontal.control.ImageButtonExtend
                android:id="@+id/menu_thought"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="100.0px"
                android:layout_marginLeft="210dp"
                android:visibility="gone"
                android:background="@drawable/lyyj_menu_springpathhorizontal_menu_thought" />

            <com.lyyj.activity.demo.menu.springpathhorizontal.control.ImageButtonExtend
                android:id="@+id/menu_sleep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="100.0px"
                android:layout_marginLeft="260dp"
                android:visibility="gone"
                android:background="@drawable/lyyj_menu_springpathhorizontal_menu_sleep" />
        </com.lyyj.activity.demo.menu.springpathhorizontal.control.ShrinkRelativeLayout>    

        <com.lyyj.activity.demo.menu.springpathhorizontal.control.ShrinkRelativeLayout
            android:id="@+id/relativelayout_shrink"
            android:layout_width="60dp"
            android:layout_height="57dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/lyyj_menu_springpathhorizontal_main_center_button" >

            <ImageView
                android:id="@+id/imageview_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/lyyj_menu_springpathhorizontal_menu_icn_plus" />
        </com.lyyj.activity.demo.menu.springpathhorizontal.control.ShrinkRelativeLayout>
    </RelativeLayout>
</LinearLayout>