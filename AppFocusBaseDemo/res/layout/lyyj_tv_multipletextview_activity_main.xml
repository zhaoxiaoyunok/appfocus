<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.lyyj.activity.demo.textview.multipletextview.MultipleTextView
        xmlns:my="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_rl"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
    	android:layout_height="wrap_content"
    	my:textSizeMultiple="12sp"
    	my:textWordMarginMultiple="10dp"
    	my:textLineMarginMultiple="10dp"
    	my:textColorMultiple="#ff0000"
    	my:textBackgroundMultiple="@drawable/testd"
    	my:textPaddingLeftMultiple="10dp"
    	my:textPaddingRightMultiple="10dp"
    	my:textPaddingTopMultiple="10dp"
    	my:textPaddingBottomMultiple="10dp"
    	/>
    <!-- my:textBackground="@color/testc" 也可以 -->
</FrameLayout>

