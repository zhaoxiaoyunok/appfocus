<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="20dip" >

    <Button
        android:id="@+id/getBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:text="get请求" />

    <Button
        android:id="@+id/postBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:text="post请求" />

    <Button
        android:id="@+id/byteBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:text="返回byte[]" />

    <Button
        android:id="@+id/fileBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:text="下载File " />

    <Button
        android:id="@+id/fileUploadBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:text="多File上传" />
    
    <com.lyyj.activity.demo.progressbar.circlerainbow.CircularProgress
        android:layout_gravity="center_horizontal"
        android:id="@+id/http_progress"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true" 
        android:visibility="gone"
        app:borderWidthRB="6dp"/>
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/iv_http_byte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" 
        android:visibility="gone"
         />
</LinearLayout>