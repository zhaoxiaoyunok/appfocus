<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FFFFFF" >
    
    <Button android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/btn_spin"
    android:text="Spin Mode" 
    android:layout_marginTop="15dp"/>
    
    <Button android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/btn_increment"
    android:text="Increment Mode" 
    android:layout_alignParentRight="true"
    android:layout_marginTop="15dp"/>

    <LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical">
    
        <LinearLayout android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
    
		    <ProgressBar android:layout_width="150dp"
		    android:layout_height="150dp"/>
		    
		    <com.lyyj.activity.demo.progressbar.progressbarwheel.ProgressWheel
		        android:id="@+id/progressBarTwo"
		        android:layout_width="150dp"
		        android:layout_height="150dp"
		        ProgressWheel:textPbWheel="Click\none of the\nbuttons"
		        ProgressWheel:textColorPbWheel="#222222"
		        ProgressWheel:textSizePbWheel="14sp"
		        ProgressWheel:rimColorPbWheel="#44000000"
		        ProgressWheel:barLengthPbWheel="60dp" 
		        ProgressWheel:barColorPbWheel="#339BB9"
		        ProgressWheel:barWidthPbWheel="25dp"
		        ProgressWheel:rimWidthPbWheel="25dp" 
		        ProgressWheel:spinSpeedPbWheel="3dp" />
	    </LinearLayout>
    
        <LinearLayout android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
		    
		    <com.lyyj.activity.demo.progressbar.progressbarwheel.ProgressWheel
		        android:id="@+id/progressBarThree"
		        android:layout_width="150dp"
		        android:layout_height="150dp"
		        ProgressWheel:textPbWheel=""
		        ProgressWheel:textColorPbWheel="#222222"
		        ProgressWheel:textSizePbWheel="14sp"
		        ProgressWheel:rimColorPbWheel="#44000000"
		        ProgressWheel:circleColorPbWheel="#2E9121"
		        ProgressWheel:barLengthPbWheel="20dp" 
		        ProgressWheel:barColorPbWheel="#8000"
		        ProgressWheel:barWidthPbWheel="25dp"
		        ProgressWheel:rimWidthPbWheel="25dp" 
		        ProgressWheel:spinSpeedPbWheel="-1dp" />
		    
		    <com.lyyj.activity.demo.progressbar.progressbarwheel.ProgressWheel
		        android:id="@+id/progressBarFour"
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        ProgressWheel:textPbWheel=""
		        ProgressWheel:textColorPbWheel="#222222"
		        ProgressWheel:textSizePbWheel="14sp"
		        ProgressWheel:rimColorPbWheel="#4000"
		        ProgressWheel:barLengthPbWheel="30dp" 
		        ProgressWheel:barColorPbWheel="#222"
		        ProgressWheel:barWidthPbWheel="4dp"
		        ProgressWheel:rimWidthPbWheel="1dp" 
		        ProgressWheel:spinSpeedPbWheel="30dp"
		        ProgressWheel:delayMillisPbWheel="75" />
		    
	    </LinearLayout>
    
    </LinearLayout>
    
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Todd Davies - 2012"
        android:textColor="#000" />

</RelativeLayout>